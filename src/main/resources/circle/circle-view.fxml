<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="circle.CircleController">
   <children>
      <TextField fx:id="radiusText" layoutX="343.0" layoutY="78.0" prefHeight="50.0" prefWidth="160.0" promptText="(number only)" />
      <Label layoutX="255.0" layoutY="78.0" prefHeight="50.0" prefWidth="75.0" text="radius : ">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Circle fx:id="circumferenceVisual" fill="WHITE" layoutX="128.0" layoutY="200.0" onMouseClicked="#onCircumferenceButtonClick" onMouseEntered="#onMouseEnteredCircumference" onMouseExited="#onMouseOutsideVisual" radius="75.0" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="5.0" />
      <Circle fx:id="areaVisual" fill="WHITE" layoutX="128.0" layoutY="200.0" onMouseClicked="#onAreaButtonClick" onMouseEntered="#onMouseEnteredArea" onMouseExited="#onMouseOutsideVisual" radius="75.0" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" />
      <Line fx:id="radiusVisual" endX="34.0" endY="-10.0" layoutX="169.0" layoutY="210.0" onMouseClicked="#onRadiusClick" onMouseEntered="#onMouseEnteredRadius" onMouseExited="#onMouseOutsideVisual" startX="-41.0" startY="-10.0" strokeWidth="5.0" />
      <Button fx:id="btnArea" layoutX="251.0" layoutY="173.0" mnemonicParsing="false" onAction="#onAreaButtonClick" prefHeight="60.0" prefWidth="140.0" text="AREA">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnCircumference" layoutX="431.0" layoutY="173.0" mnemonicParsing="false" onAction="#onCircumferenceButtonClick" prefHeight="60.0" prefWidth="140.0" text="CIRCUMFERENCE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label fx:id="lbAnswer" alignment="CENTER" layoutX="280.0" layoutY="255.0" prefHeight="80.0" prefWidth="260.0">
         <font>
            <Font size="15.0" />
         </font></Label>
      <Label fx:id="lbRadius" layoutX="149.0" layoutY="177.0" text="radius" visible="false" />
      <Label fx:id="lbCircumference" layoutX="88.0" layoutY="96.0" text="circumference" visible="false" />
      <Label fx:id="lbArea" layoutX="116.0" layoutY="236.0" onMouseEntered="#onMouseEnteredArea" text="area" textFill="WHITE" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
